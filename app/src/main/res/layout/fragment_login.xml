<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sumanth.thenationalist.LoginActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginEmailLabel"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:text="Email: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/loginEmailLabel"
        android:textColor="@android:color/black"
        android:hint="Your email id"
        android:inputType="textEmailAddress"
        android:singleLine="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginPasswordLabel"
        android:layout_below="@id/loginEmailLabel"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginBottom="10dp"
        android:text="Password: "/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginEmailLabel"
        android:layout_toRightOf="@+id/loginPasswordLabel"
        android:hint="Enter your password"
        android:textColor="@android:color/black"
        android:singleLine="true"
        android:id="@+id/loginPasswordText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginButton"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginPasswordLabel"/>

</RelativeLayout>
