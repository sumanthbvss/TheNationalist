<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sumanth.thenationalist.LoginActivity$PlaceholderFragment">

    <!--<TextView-->
        <!--android:id="@+id/section1_label"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameLabel"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:text="Name: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nameLabel"
                android:hint="Your Name"
                android:textColor="@android:color/black"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mobileLabel"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"
                android:layout_below="@id/nameLabel"
                android:text="Mobile: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameLabel"
                android:layout_toRightOf="@+id/mobileLabel"
                android:textColor="@android:color/black"
                android:inputType="phone"
                android:hint="Mobile Number"
                android:singleLine="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/emailLabel"
                android:textColor="@android:color/black"
                android:layout_below="@id/mobileLabel"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:text="Email: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mobileLabel"
                android:layout_toRightOf="@+id/emailLabel"
                android:textColor="@android:color/black"
                android:hint="Your email"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passwordLabel"
                android:layout_below="@id/emailLabel"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:text="Password: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/emailLabel"
                android:layout_toRightOf="@+id/passwordLabel"
                android:hint="Your Password"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:id="@+id/passwordText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirmPasswordLabel"
                android:layout_below="@id/passwordLabel"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:text="Confirm: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/passwordLabel"
                android:layout_toRightOf="@+id/passwordLabel"
                android:hint="Confirm Password"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:id="@+id/confirmPasswordText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationLabel"
                android:layout_below="@id/confirmPasswordLabel"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:text="Location: "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirmPasswordLabel"
                android:layout_toRightOf="@+id/locationLabel"
                android:hint="Your location"
                android:textColor="@android:color/black"
                android:singleLine="true"
                android:id="@+id/locationText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contribution : "
                android:layout_marginTop="20dp"
                android:textSize="24sp"
                android:layout_below="@+id/locationLabel"
                android:textColor="@android:color/black"
                android:id="@+id/contributionLabel"/>

            <CheckBox
                android:id="@+id/awCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/contributionLabel"
                android:layout_marginTop="10dp"
                android:text="Article Writing" />

            <CheckBox
                android:id="@+id/funCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/awCheck"
                android:text="Funding" />
            <CheckBox
                android:id="@+id/netCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/funCheck"
                android:text="Networking" />
            <CheckBox
                android:id="@+id/nrCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/netCheck"
                android:text="News Reporting" />
            <CheckBox
                android:id="@+id/idCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nrCheck"
                android:text="Infographic Designing" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/registerButton"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/idCheck"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
